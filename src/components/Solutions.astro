<style>
.features-card {
  position: relative;
  background: linear-gradient(135deg, rgba(202, 170, 95, 0.1), rgba(202, 170, 95, 0.2));
  border-radius: 20px;
  padding: 16px;
  margin: 0 auto;
  width: 87px;
  height: 87px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid rgba(202, 170, 95, 0.3);
  backdrop-filter: blur(8px);
  transition: all 0.3s ease;
  overflow: hidden;
}
.features-card:hover {
  transform: translateY(-4px) scale(1.05);
  border-color: rgba(202, 170, 95, 0.6);
}
.features-img {
  width: 51px;
  height: 51px;
  object-fit: contain;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  transition: all 0.3s ease;
  z-index: 2;
  position: relative;
}
.features-card:hover .features-img {
  transform: scale(1.1);
  filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.2));
}
.features-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(202, 170, 95, 0.05), transparent 70%);
  border-radius: 18px;
  pointer-events: none;
  z-index: 1;
}
@media (min-width: 640px) {
  .features-card {
    width: 101px;
    height: 101px;
    padding: 16px;
  }
  .features-img {
    width: 58px;
    height: 58px;
  }
}
@media (min-width: 768px) {
  .features-card {
    width: 115px;
    height: 115px;
    padding: 18px;
    border-radius: 22px;
  }
  .features-img {
    width: 66px;
    height: 66px;
  }
}
@media (min-width: 1024px) {
  .features-card {
    width: 101px;
    height: 101px;
    padding: 16px;
  }
  .features-img {
    width: 58px;
    height: 58px;
  }
}
</style>
